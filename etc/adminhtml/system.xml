<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="magento2developer" translate="label" sortOrder="999">
			<label>Magento2Developer.com</label>
		</tab>
		<section id="magento2developer" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
			<label>ChatGPT</label>
			<tab>magento2developer</tab>
			<resource>Magento2Developer_ChatGPT::config_magento2developer_chatgpt</resource>
			<group id="chatgpt" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>Config</label>
				<field id="token" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>ChatGPT Token Key</label>
					<comment/>
				</field>
                <field id="model" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>ChatGPT Model</label>
                    <comment/>
                    <source_model>Magento2Developer\ChatGPT\Model\Config\Source\Model</source_model>
                </field>
                <field id="model_image" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>ChatGPT Image Model</label>
                    <comment/>
                    <source_model>Magento2Developer\ChatGPT\Model\Config\Source\ModelImage</source_model>
                </field>
			</group>
		</section>
	</system>
</config>
